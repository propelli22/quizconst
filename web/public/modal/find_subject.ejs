<link rel="stylesheet" href="style/find_subject.css">
<div id="find-subject-modal" class="modal">
    <div id="find-subject-modal-content">
        <span class="close">&times;</span>
        <h1><%= find_subject %></h1>

        <div id="subject-container">
            <% for (let subject of subjects) { %>
                <div class="subject-selection">
                    <div class="subject-data">
                        <h2 id="subject-<%= subject.subject_id %>-title"><%= subject.subject_title %></h2>
                        <p id="subject-<%= subject.subject_id %>-description"><%= subject.subject_description %></p>
                        <p id="subject-<%= subject.subject_id %>-author"><%= subject.username %></p>
                        <button id="subject-<%= subject.subject_id %>" class="select-button" onclick="selectSubject(this.id)"><%= select %></button>
                    </div>
                    <img src="style/content/public_img/<%= subject.subject_image %>" alt="Image related to <%= subject.subject_title %>" id="subject-<%= subject.subject_id %>-image">
                </div>
            <% } %>
        </div>
    </div>
</div>